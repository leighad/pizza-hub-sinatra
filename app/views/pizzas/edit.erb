<h2>Edit Your Pizza Here:</h2>

<ul>
<% @pizza.errors.full_messages.each do |e| %>
    <li><%= e %></li>
<% end %>
</ul>

<form action="/pizzas/<%= @pizza.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">

    <label>Name:</label>
    <input type="text" name="pizza[pizza_name]" value="<%= @pizza.pizza_name %>"><br/>
    <label>Price: $</label>
    <input type="text" name="pizza[price]" value="<%= @pizza.price %>"><br/>
    <label>Where made:</label>
    <input type="text" name="pizza[origin]" value="<%= @pizza.origin %>"><br/>
    <label>Description:</label><br/>
    <textarea id="pizza_description" name="pizza[description]"
        rows="6" cols="60">
        <%= @pizza.description %>
    </textarea><br/>
    <label>Notes:</label>
    <input type="text" name="pizza[notes]" value="<%= @pizza.notes %>"><br/>
    <input type="submit" value="Edit Pizza">
</form>